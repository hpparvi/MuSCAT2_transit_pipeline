from getpass import getpass
from muscat2ph.catalog import update_toi_catalog, update_m2_catalog


if __name__ == '__main__':
    passwd = getpass(prompt='M2 password: ')
    print('Updating the TOI catalog')
    update_toi_catalog()
    print('Updating the M2 catalog')
    try:
        update_m2_catalog(passwd)
    except ValueError:
        print('Failed to update the M2 catalog: wrong password')
        exit(0)
