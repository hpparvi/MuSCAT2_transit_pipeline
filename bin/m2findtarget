import re


from pathlib import Path
from argparse import ArgumentParser


if __name__ == '__main__':
    ap = ArgumentParser(description='Find all the nights a target has been observed.')
    ap.add_argument('target', type=str, help='Target name')
    ap.add_argument('-d', '--root', type=Path, default='.')
    args = ap.parse_args()

    root = args.root
    p = re.compile(args.target)

    found_nights = {}
    nights = root.glob('??????')
    for n in nights:
        objects = (n / 'obj').glob('*')
        for o in objects:
            if o.is_dir():
                s = re.search(p, o.name.lower())
                if s:
                    found_nights[n.name] = o.name

    for n in sorted(found_nights.keys()):
        print(n, found_nights[n])